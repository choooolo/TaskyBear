<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scheduleRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ScheduleActivity">

    <ScrollView
        android:id="@+id/scrollArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavigation"
        android:paddingTop="12dp"
        android:paddingBottom="120dp"
        android:fillViewport="true"
        android:contentDescription="scroll" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">


            <LinearLayout
                android:id="@+id/uploadCardContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <androidx.cardview.widget.CardView
                    android:id="@+id/uploadCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp"
                    android:padding="16dp"
                    app:cardBackgroundColor="@color/aesthetic_bg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/selectFromDeviceBtn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Select from Device"
                            android:backgroundTint="@color/light_brown"
                            android:textColor="@android:color/black"
                            android:layout_marginBottom="12dp" />

                        <EditText
                            android:id="@+id/linkInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Link"
                            android:backgroundTint="@color/light_brown"
                            android:layout_marginBottom="12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Everyday"
                                android:textColor="@android:color/black"
                                android:layout_marginEnd="8dp" />

                            <Switch
                                android:id="@+id/everydaySwitch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:contentDescription="Toggle Everyday Schedule" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="24dp"
                                android:text="Set Duration"
                                android:textColor="@android:color/black"
                                android:layout_marginEnd="8dp" />

                            <Switch
                                android:id="@+id/durationSwitch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:contentDescription="Toggle Duration Setting" />

                            <ImageView
                            android:id="@+id/calendarBtn"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginStart="8dp"
                            android:src="@drawable/calendar_icon"
                            android:contentDescription="Open calendar to set duration"
                            android:clickable="true"
                            android:focusable="true" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/selectedDateText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Selected date will appear here"
                            android:textColor="@android:color/black"
                            android:layout_marginBottom="8dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="end"
                            android:layout_marginTop="8dp">

                            <ImageView
                                android:id="@+id/deleteIcon"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_marginEnd="16dp"
                                android:src="@drawable/trash_icon"
                                android:contentDescription="Delete this schedule" />

                            <Button
                                android:id="@+id/uploadBtn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+ Upload"
                                android:backgroundTint="@color/light_brown"
                                android:textColor="@android:color/white" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Schedule Items -->
            <LinearLayout
                android:id="@+id/scheduleDisplayContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:paddingBottom="24dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Floating Action Button -->
    <androidx.cardview.widget.CardView
        android:id="@+id/fabCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="100dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="28dp"
        android:elevation="6dp">

        <ImageView
            android:id="@+id/fab"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/add_icon"
            android:contentDescription="Add new schedule"
            android:padding="12dp"
            android:elevation="4dp" />
    </androidx.cardview.widget.CardView>

    <!-- Bottom Navigation -->
    <RelativeLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/footer"
            android:contentDescription="Bottom navigation background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="5">

            <!-- Home -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/homebtn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/home_icon"
                    app:tint="#8B4513"
                    android:contentDescription="Go to Home" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textColor="#8B4513"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- To-Do -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/todobtn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/todo_icon"
                    app:tint="#8B4513"
                    android:contentDescription="Go to To-Do List" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To-Do"
                    android:textColor="#8B4513"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Shelf -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/shelfbtn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/shelf_icon"
                    app:tint="#8B4513"
                    android:contentDescription="Go to Shelf" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shelf"
                    android:textColor="#8B4513"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Schedule -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/schedbtn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/sched_icon"
                    app:tint="#8B4513"
                    android:contentDescription="Go to Schedule" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Schedule"
                    android:textColor="#8B4513"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Profile -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/profilebtn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/profile_icon"
                    app:tint="#8B4513"
                    android:contentDescription="Go to Profile" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textColor="#8B4513"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>

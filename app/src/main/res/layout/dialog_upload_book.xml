<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload New Book"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/bookCoverPreview"
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:src="@drawable/upload_icon"
                android:scaleType="centerCrop"
                android:background="#EEEEEE" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Upload Book Photo"
                android:textSize="12sp"
                android:textColor="#888888"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <EditText
                android:id="@+id/bookTitleInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:hint="Book Title"
                android:inputType="text"
                android:minHeight="48dp" />

            <Button
                android:id="@+id/chooseFileBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose PDF File"/>
            <Button
                android:id="@+id/doneBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Done"
                android:backgroundTint="#D47B7B"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/white">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profilePic"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/profile_placeholder"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/light_brown" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome Back!"
                android:textColor="@color/light_brown"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_brown"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/todobtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/todo_icon"
                android:layout_marginEnd="16dp"
                android:contentDescription="To-Do" />

            <ImageView
                android:id="@+id/shelfbtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/shelf_icon"
                android:layout_marginEnd="16dp"
                android:contentDescription="Shelf" />

            <ImageView
                android:id="@+id/homebtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/home_icon"
                android:layout_marginEnd="16dp"
                android:contentDescription="Home" />

            <ImageView
                android:id="@+id/profilebtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/profile_icon"
                android:layout_marginEnd="16dp"
                android:contentDescription="Profile" />

            <ImageView
                android:id="@+id/schedbtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/sched_icon"
                android:contentDescription="Schedule" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView> 